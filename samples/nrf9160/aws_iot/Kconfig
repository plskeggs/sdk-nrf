menu "AWS IoT Sample Settings"

config APP_VERSION
	string "Application version"
	default "v1.0.0"

config PUBLICATION_INTERVAL_SECONDS
	int "Interval in seconds that the sample will publish data"
	default 60

config CONNECTION_RETRY_TIMEOUT_SECONDS
	int "Number of seconds between each AWS IoT connection retry"
	default 30

config APP_SUBSCRIPTION_TOPIC_1
	string "First topic to subscribe to"
	default "my-custom-topic/example"

config APP_SUBSCRIPTION_TOPIC_2
	string "Second topic to subscribe to"
	default "my-custom-topic/example_2"

config APP_PUBLISH_TOPIC
	string "App topic to publish to"
	default ""

config APP_PUBLISH_MESSAGE
	string "Message to publish to app topic"
	default ""

config APP_PUBLISH_VER_TO_SHADOW
	bool "Publish version to shadow to verify FOTA update worked"
	default y

config APP_PUBLISH_DATA_TO_SHADOW
	bool "Send data to shadow every PUBLICATION_INTERVAL_SECONDS"
	default y

config APP_STAGE
	string "nRF Cloud stage"
	default "prod"

config APP_TENANT
	string "User tenant ID"
	default ""

endmenu

menu "Zephyr Kernel"
source "Kconfig.zephyr"

endmenu

module = AWS_IOT_CLIENT
module-str = AWS IoT Client
source "subsys/logging/Kconfig.template.log_config"

